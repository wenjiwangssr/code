<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_text"
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="请登录或注册"
        android:textAlignment="center"
        android:textColor="#F43636"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:maxLength="11"
        android:id="@+id/phoneText"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        android:layout_weight="1"
        android:background="@drawable/shape"

        android:ems="10"
        android:hint="输入手机号"
        android:inputType="phone"
        android:singleLine="true"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:maxLength="6"
        android:numeric="integer"
        android:id="@+id/verification_code"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="输入验证码"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/phoneText" />

    <Button


        android:id="@+id/send_verify_code"
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/button_shape"
        android:text="发送验证码"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/verification_code"
        app:layout_constraintTop_toTopOf="@+id/phoneText"
         />

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="148dp"
        android:text="手机号"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="46dp"
        android:layout_height="18dp"

        android:layout_marginTop="36dp"
        android:text="验证码"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttonstyle"
        android:text="登录"
        app:layout_constraintStart_toStartOf="@+id/sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/verification_code" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonstyle"
        android:text="注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

</androidx.constraintlayout.widget.ConstraintLayout>