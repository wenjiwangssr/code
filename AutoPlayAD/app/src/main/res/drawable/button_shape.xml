<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#9E9083" />
            <stroke android:width="1dip" android:color="#3F3F3F"/>
            <!-- 圆角 -->
            <corners android:radius="10dp" />
            <!-- 边距 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item android:state_pressed="false"
        android:state_enabled="true">
        <shape>
            <solid android:color="#FF8922" />
            <stroke android:width="1dip" android:color="#3F3F3F"/>
            <!-- 圆角 -->
            <corners android:radius="10dp" />
            <!-- 边距 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2CFF8922" />
            <stroke android:width="1dip" android:color="#3F3F3F"/>
            <!-- 圆角 -->
            <corners android:radius="10dp" />
            <!-- 边距 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>



</selector>